set {
  $config ~/.config

  $mod Mod4

  $left h
  $down j
  $up k
  $right l

  # Electron will fix "the รก problem" in 02/2022
  #$electron_mods ''
  $electron_mods '--enable-features=UseOzonePlatform --ozone-platform=wayland --gtk-version=4'

  $locking swaylock --daemonize --show-failed-attempts --fade-in 0.2 --grace 2 --ignore-empty-password --clock

  $browser    'vivaldi-stable $electron_mods'
  $term       alacritty
  $editor     ~/.local/bin/nvim_sway
  $screenshot ~/Media/Pictures/Screenshot
  $wallpaper  ~/.local/share/pictures

  $lightred    #fb4934
  $red         #cc241d
  $darkgreen   #98971a
  $darkyellow  #d79921
  $darkblue    #458588
  $darkmagenta #d65d0e
  $darkcyan    #689d6a
  $white       #fbf1c7
  $mediumgrey  #665c54
  $darkred     #cc241d
  $green       #b8bb26
  $yellow      #fabd2f
  $blue        #83a598
  $magenta     #fe8019
  $cyan        #8ec07c
  $darkwhite   #a89984
  $background  #1d2021
  $background2 #504945
}

swaynag_command swaynagmode
popup_during_fullscreen leave_fullscreen
focus_follows_mouse always

seat seat0 xcursor_theme default 22
font pango:System DejaVu Sans Extralight 10

floating_maximum_size 1024 x 768
floating_minimum_size 80 x 60
floating_modifier $mod

default_border pixel 2
default_floating_border pixel 1
hide_edge_borders smart

#                       BORDER      BACKGROUND  TEXT        INDICATOR    CHILD_BORDER
client.focused          $background $background $darkyellow $background2 $background2
client.focused_inactive $background $background $yellow     $background2 $background2
client.unfocused        $background $background $yellow     $background2 $background2
client.urgent           $darkred    $mediumgrey $background $darkred     $darkred
client.placeholder      $darkred    $mediumgrey $background $darkred     $darkred
client.background       $background

smart_gaps on
gaps inner 3
gaps outer 3

exec swayidle -w \
  timeout 200 'light -G > /tmp/brightness && light -S 10' resume 'light -S $([ -f /tmp/brightness ] && cat /tmp/brightness || echo 100%)' \
  timeout 300 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
  timeout 450 'exec $locking' \
  before-sleep 'exec $locking'

bar {
  swaybar_command waybar
}

exec ~/.config/sway/script/fade.py

include $config/sway/conf.d/*

